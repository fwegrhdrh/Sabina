<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/some_id"
                android:layout_width="104dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:gravity="top"
                android:text="Еще"
                android:textColor="@color/black"
                android:textSize="@dimen/size20"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/search"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="74dp"
                android:layout_height="20dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal|top"
                android:text="Премиум"
                android:textSize="@dimen/size13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/some_id" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="80dp"
                android:layout_height="16dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal|top"
                android:text="Настройки"
                android:textSize="@dimen/size13"
                app:layout_constraintStart_toEndOf="@+id/text1"
                app:layout_constraintTop_toBottomOf="@+id/some_id" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/line"
                app:layout_constraintEnd_toEndOf="@+id/text1"
                app:layout_constraintStart_toStartOf="@+id/text1"
                app:layout_constraintTop_toTopOf="@+id/text1" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/line"
                app:layout_constraintEnd_toEndOf="@+id/text2"
                app:layout_constraintStart_toStartOf="@+id/text2"
                app:layout_constraintTop_toTopOf="@+id/text2" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:gravity="top"
                android:text="Выберите языки:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/some_id" />

            <View
                android:id="@+id/rectangle_2"
                android:layout_width="253dp"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:background="@color/orange"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/t2" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:text="Я хочу изучать тагальский"
                android:textColor="@color/black"
                android:textSize="@dimen/size15"
                app:layout_constraintBottom_toBottomOf="@+id/rectangle_2"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rectangle_2" />

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginBottom="7dp"
                android:src="@drawable/flat"
                app:layout_constraintBottom_toBottomOf="@+id/rectangle_2"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_2"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/rectangle_2">

            </ImageView>


            <View
                android:id="@+id/rectangle_3"
                android:layout_width="253dp"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:background="@color/violet"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rectangle_2" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:text="Я говорю по-русски"
                android:textColor="@color/black"
                android:textSize="@dimen/size15"
                app:layout_constraintBottom_toBottomOf="@+id/rectangle_3"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rectangle_3" />

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/flat"
                app:layout_constraintBottom_toBottomOf="@+id/rectangle_3"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/rectangle_3">

            </ImageView>

            <TextView
                android:id="@+id/t3"
                android:layout_width="288dp"
                android:layout_height="105dp"
                android:layout_marginTop="280dp"
                android:layout_marginStart="25dp"
                android:gravity="top"
                android:text="На подписке премиум, вы можете изучать любой из доступных языков"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/rectangle_6"
                android:layout_width="420dp"
                android:layout_height="53dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#B6B3B3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:src="@drawable/book"
                app:layout_constraintBottom_toBottomOf="@+id/rectangle_6"
                app:layout_constraintStart_toStartOf="@+id/rectangle_6"
                app:layout_constraintTop_toTopOf="@+id/rectangle_6" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/smile"
                android:layout_marginStart="145dp"
                app:layout_constraintBottom_toBottomOf="@+id/rectangle_6"
                app:layout_constraintStart_toEndOf="@+id/imageV"
                app:layout_constraintTop_toTopOf="@+id/rectangle_6" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more"
                android:layout_marginEnd="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/rectangle_6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rectangle_6" />










        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>









</androidx.constraintlayout.widget.ConstraintLayout>



