<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="cap1">
        <item name="android:text">@string/name</item>
        <item name="android:textSize">@dimen/size15</item>
    </style>
    <style name="cap2">
        <item name="android:textSize">@dimen/size13</item>
        <item name="android:text">@string/глоссарий</item>

    </style>
    <style name="cap3">
        <item name="android:textSize">@dimen/size13</item>
        <item name="android:text">@string/скачено</item>

    </style>
    <style name="cap4">
        <item name="android:textSize">@dimen/size13</item>
        <item name="android:text">@string/прогресс</item>

    </style>



</resources>